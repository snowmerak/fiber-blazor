package blazor

templ Page(title string, lang string, content templ.Component) {
	<!DOCTYPE html>
	<html lang={ lang }>
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title }</title>
			<script src="/statics/htmx.min.js"></script>
			<script src="/statics/tailwindcss.js"></script>
		</head>
		<body>
			@content
		</body>
	</html>
}
